package test.master;
import lejos.robotics.subsumption.Behavior;
import lejos.utility.Delay;
import lejos.robotics.Color;

public class AvoidEdge implements Behavior{
			
			ModelMaster m;
			private boolean suppressed = false;
			
			public AvoidEdge(ModelMaster m){
				this.m = m;
			}
			
			@Override
			public boolean takeControl() {
				m.color.fetchSample(m.colorSamples, 0);
//				return m.colorSamples[0] == Color.WHITE;
				return m.colorSamples[0] == Color.BLACK;
			}
			
			@Override
			public void action() {
//				suppressed = false;
//				m.touchFrontLeft=false;
//				m.touchFrontRight=false;
//				m.g=false;
//				m.lm.backward();
//				m.rm.backward();
				suppressed = false;
				m.lm.backward();
				m.rm.backward();
				Delay.msDelay(50);
				m.rm.forward();
				Delay.msDelay(75);
			}
			@Override
			public void suppress() {
				suppressed = true;
			}
		}
